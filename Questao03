/** QUESTÃO 03 PSI 11090 - c147492-9 **/


SELECT * FROM PRODUTO;
/**SELECIONA TODOS OS ITENS QUE ESTÃO CADASTRADOS NA TABELA PRODUTO**/

SELECT * FROM ITEM_PRODUTO;
/**SELECIONA TODOS OS ITENS QUE ESTÃO CADASTRADOS NA TABELA ITEM_PRODUTO
SE ITEM_PRODUTO FOSSE O ESTOQUE, SAIRIAM NA PESQUISA TUDO QUE ESTARIA CADASTRADO NO ESTOQUE**/

SELECT * FROM PRODUTO WHERE CODIGOPRODUTO= 10;
/**SELECIONA TODOS OS ITENS QUE ESTÃO CADASTRADOS NA TABELA PRODUTO e QUE O CODIGO DO PRODUTO SEJA IGUAL A 10**/

SELECT * FROM PRODUTO WHERE CATEGORIA= "ESPORTE";
/** SELECIONA TODOS OS ITENS QUE ESTÃO CADASTRADOS NA TABELA PRODUTO E QUE ESTÃO CADASTRADOS COMO CATEGORIA ESPORTE**/

SELECT * FROM PRODUTO WHERE CATEGORIA= ~"ESPORTE" AND ATRIBUTO1 > 0;
/** SELECIONA TODOS OS ITENS QUE ESTÃO CADASTRADOS NA TABELA PRODUTO E QUE ESTÃO CADASTRADOS COMO CATEGORIA ESPORTE E QUE O ATRIBUTO1 SEJA MAIOR QUE 0 **/

SELECT P.NOME, IP.NOME, P.DESCRICAO, IP.DESCRICAO, P.CATEGORIA, IP.CATEGORIA, 
P.ATRIBUTO1, IP.ATRIBUTO1, P.ATRIBUTO2, IP.ATRIBUTO2, P.ATRIBUTO3, IP.ATRIBUTO3, P.ATRIBUTO4, IP.ATRIBUTO4
FROM PRODUTO P, ITEM_PRODUTO IP
WHERE P.CODIGOPRODUTO = IP.CODIGOPRODUTO;
/** SELECIONA TODOS AS INFORMAÇÕES DAS DUAS TABELAS AONDE CODIGOPRODUTO DA TABELA ITEM_PRODUTO Ë IGUAL AOS CODIGOPRODUTO QUE ESTAO CADASTRADOS NA TABELA PRODUTO.
SE A TABELA ITEM PRODUTO FOSSE O ESTOQUE, ELE TRARIA SOMENTE OS DADOS DOS PRODUTOS QUE ESTÃO CADASTRADOS NA BASE MAS QUE TAMBEM EXISTISSEM NO ESTOQUE**/

SELECT P.NOME, P.DESCRICAO, P.CATEGORIA, P.ATRIBUTO1, P.ATRIBUTO2, P.ATRIBUTO3, P.ATRIBUTO4
FROM PRODUTO P, ITEM_PRODUTO IP
WHERE P.CODIGOPRODUTO = IP.CODIGOPRODUTO;
/** SELECIONA AS INFORMAÇÕES DA TABELA PRODUTO AONDE CODIGOPRODUTO DA TABELA ITEM_PRODUTO Ë IGUAL AOS CODIGOPRODUTO QUE ESTAO CADASTRADOS NA TABELA PRODUTO.
  SE A TABELA ITENS PRODUTO REPRESENTASSE O CONTEUDO DO ESTOQUE, TRARIA O NOME APENAS DOS PRODUTOS EM ESTOQUE**/

SELECT P.CODIGOPRODUTO, P.NOME, P.DESCRICAO, ITEM_PRODUTO.CODIGOITEM
FROM PRODUTO P  JOIN ITEM_PRODUTO
ON P.CODIGOPRODUTO = ITEM_PRODUTO.CODIGOPRODUTO;
/** UTILIZANDO UM JOIN. SELECIONA AS INFORMAÇÕES DA TABELA PRODUTO AONDE CODIGOPRODUTO DA TABELA ITEM_PRODUTO Ë IGUAL AOS CODIGOPRODUTO NA TABELA PRODUTO.
  SE A TABELA ITENS PRODUTO REPRESENTASSE O CONTEUDO DO ESTOQUE, TRARIA O NOME APENAS DOS PRODUTOS EM ESTOQUE**/

SELECT NOME, CODIGOPRODUTO, AVG(ATRIBUTO1) FROM PRODUTO  WHERE ATRIBUTO1 > 10 GROUP BY NOME;
/** Estamos selecionando o código, nome e a média de preços  (nesse caso atributo1 sendo o valor do produto)
 No filtro WHERE dizemos que queremos os preços com media maior que 10 e agrupamos todos os registros pelo nome. **/

SELECT NOME, CODIGOPRODUTO FROM PRODUTO  WHERE ATRIBUTO1 > 10 ORDER BY NOME ASC;
/** Estamos selecionando o código, nome e a média de preços  (nesse caso atributo1 sendo o valor do produto)
 No filtro WHERE dizemos que queremos os preços com media maior que 10 e apresentando em ordem alfabetica pelo campo nome. **/

SELECT P.NOME, P.DESCRICAO, IP.CATEGORIA, IP.ATRIBUTO1
FROM PRODUTO P, ITEM_PRODUTO IP
WHERE P.CODIGOPRODUTO = IP.CODIGOPRODUTO;


